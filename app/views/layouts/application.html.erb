<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || "Pragmatic Bookshelf" %>
	</div>
	
	<div id="columns">
		<div id="side">
			<a href=".">Home</a><br />
			<a href="./faq">Questions</a><br />
			<a href="./news">News</a><br />
			<a href="./contact">Contact</a>
			
			<p>
				<%= Time.now.strftime("Current Date: %m/%d/%Y") %><br />
				<%= Time.now.strftime("Current Time: %I:%M %P") %>
			</p>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
